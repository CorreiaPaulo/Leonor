def  on_forever():
    basic.show_icon(IconNames.HEART)
    basic.pause(100)
    basic.show_string(" ")
    basic.show_string("LEONOR")
    basic.show_icon(IconNames.HEART)
    basic.pause(100)

basic.forever(on_forever)
